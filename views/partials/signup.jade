div(class="row")
    div(class="col-md-4 col-md-offset-4")
        form(ng-submit="signup()", id="signup-form")
            div(class="form-group")
                label Email
                input(ng-model="signup.identifier", class="form-control", type="email")
            div(class="form-group")
                label Password
                input(ng-model="signup.password", class="form-control", type="password")
            div(class="row")
                div(class="col-md-6")
                    div(class="form-group")
                        label First Name
                        input(ng-model="signup.first_name", class="form-control", type="text")
                div(class="col-md-6")
                    div(class="form-group")
                        label Last Name
                        input(ng-model="signup.last_name", class="form-control", type="text")                            
            div(class="btn-toolbar")
                button(type="submit", class="btn btn-block btn-primary") Signup
